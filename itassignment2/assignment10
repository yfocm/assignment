<body>
	<h2>To accept string from user and reverse the given string and check whether it is palindrome or not.</h2>


	<script type="text/javascript">
		var str
		function checkPalindrome(str) {
			let arrayValues = string.split('');


			let reverseArrayValues = arrayValues.reverse();


			let reverseString = reverseArrayValues.join('');


			if(string == reverseString) {
				document.write('It Is A Palindrome');
			}
			else {
				document.write('It Is Not A Palindrome');
			}
		}


		let string = prompt('Enter A String:');


		checkPalindrome(string);
	</script>
</body>
